<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosePlanActivity">

    <include
        android:id="@+id/choose_plan_appbar"
        layout="@layout/app_bar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:text="Choix du plan de lecture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_plan_appbar" />

    <RadioGroup
        android:id="@+id/radioGroup_choose_plan"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/rb_1an"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1an " />

        <RadioButton
            android:id="@+id/rb_2ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2 ans " />

        <RadioButton
            android:id="@+id/rb_3ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 3 ans " />
    </RadioGroup>

    <Button
        android:id="@+id/btn_save_choose_plan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorAccent"
        android:text="Enregistrer"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_choose_plan" />
</androidx.constraintlayout.widget.ConstraintLayout>