<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/bgColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/item_bible_verse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="1"
            android:textColor="@color/textColor"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/item_bible_verse_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            tools:text="hjdhjsdhjhdhsqjhjdhjdsjhdjhsdjqhhjdhqdjjdjhjhdjshjdjhhjdsjhqjshdjhqsdjhjhdsqjhdjhjhqsdjhdqjhsdqklldkfdsjsfdjsdfhfsdhksfdkjsjfjfskjfsslkkldsq" />

        <ImageView
            android:id="@+id/item_bible_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_more"
            android:tint="@color/textColor"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>